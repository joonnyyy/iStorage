<Window x:Name="login" x:Class="iStorage.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iStorage"
        mc:Ignorable="d"
        Title="iStorage" Height="300" Width="500"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontFamily="Times New Roman" FontSize="20" SizeToContent="WidthAndHeight">
    <Window.Background>
        <!--Icon="C:\Users\Jonny\Desktop\DS2\DataBase.ico"-->
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFD4AF31" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="login_label" Content="Login" Margin="196,20,168,0" VerticalAlignment="Top" Height="50" Width="130" Foreground="#FF5F5C2A" FontSize="33" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Label x:Name="User_label" Content="Benutzername" HorizontalAlignment="Left" Margin="27,64,0,177" VerticalAlignment="Center" Width="149" Height="30" FontSize="20" FontWeight="Bold" Foreground="Black"/>
        <TextBox x:Name="Username_Input" HorizontalAlignment="Left" Height="24" Margin="26,99,0,148" TextWrapping="Wrap" VerticalAlignment="Center" Width="150" BorderBrush="Black" FontSize="16" Background="Transparent" BorderThickness="2"/>
        <Label x:Name="Pwd_label" Content="Passwort" HorizontalAlignment="Left" Margin="27,136,0,105" VerticalAlignment="Center" Width="149" Height="30" FontSize="20" FontWeight="Bold"/>
        <PasswordBox x:Name="Password_Input" HorizontalAlignment="Left" Margin="26,171,0,78" VerticalAlignment="Center" Width="150" Height="22" Background="Transparent" BorderBrush="Black" BorderThickness="2"/>
        <Button x:Name="Login_Button" Content="Login" HorizontalAlignment="Left" Margin="86,220,0,0" VerticalAlignment="Top" Width="322" Height="27" IsEnabled="True" Background="Transparent" BorderThickness="2" BorderBrush="Black" Click="Login_Button_Clicked" IsDefault="True"/>

    </Grid>
</Window>
